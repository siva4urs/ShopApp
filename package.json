{
  "name": "shopapp-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter ./apps/web dev",
    "dev:mobile": "pnpm --filter ./apps/mobile start",
    "dev:graphql": "pnpm --filter ./packages/graphql dev",
    "dev": "concurrently \"pnpm dev:web\" \"pnpm dev:graphql\" \"pnpm dev:mobile\"",
    "build": "pnpm -w run -r build",
    "test": "pnpm -w run -r test",
    "e2e": "playwright test",
    "prepare": "npx simple-git-hooks"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "concurrently": "latest",
    "playwright": "latest",
    "pnpm": "latest",
    "simple-git-hooks": "latest"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm -w run -r lint-staged"
  }
}
