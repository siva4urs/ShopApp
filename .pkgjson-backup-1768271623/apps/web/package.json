{
  "name": "@shopapp/web",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "format": "prettier --write 'src/**/*.{ts,tsx,scss,css,js,jsx,json,md}'",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "@apollo/client": "^3.8.0",
    "graphql": "^16.6.0",
    "react-router-dom": "^6.14.0"
  },
  "devDependencies": {
    "vite": "^5.0.0",
    "typescript": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vitest": "^1.3.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/jest-dom": "^6.0.0",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.0",
    "autoprefixer": "^10.4.0",
    "sass": "^1.70.0",
    "eslint": "^8.40.0",
    "@typescript-eslint/parser": "^5.61.0",
    "@typescript-eslint/eslint-plugin": "^5.61.0",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^2.8.8",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.0"
  },
  "vitest": {
    "setupFiles": "./src/vitest.setup.ts",
    "environment": "jsdom",
    "coverage": {
      "provider": "c8",
      "reporter": ["text", "json", "html"],
      "reportsDirectory": "coverage",
      "lines": 90,
      "functions": 90,
      "branches": 90,
      "statements": 90
    }
  }
}
